<h1>Product Name: <%= @item.name %></h1>
Price :<%= @item.price %><br>
<p> <%= image_tag @item.image_url, size: "150x150" %></p>
condition: <%= @item.condition %><br>
Product Description: <%= @item.description %><br>
Location: <%= @item.location.city%> City,  <%= @item.location.state%><br>
Quantity: <%= @item.quantity %><br>
<br>


<% if current_user %>
    <% if  current_user.id == @item.user.id && @item.status != "Sold" %>
        <%= link_to "Edit", edit_item_path %>      |
        <%= link_to 'Delete',  @item,  method: :delete, data: { confirm: 'Are you sure?' } %>
        
    <% elsif @item.status != "Sold"   %>
        <%= link_to 'Buy Now', boughts_bought_path %><br>
    <% elsif current_user.id != @item.user.id && @item.status == "Sold"  %> 
        <p>You bought this Product from  <%= @item.user.name %></p>
    <% end %>
<% else %>
    <%= "SignUp Or Login to be able to Buy" %>
<% end %>

